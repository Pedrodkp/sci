<%= form_for @taxonomy, :html => { :class => "form-horizontal taxonomy" } do |f| %>

  <% if @taxonomy.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-code"><%= pluralize(@taxonomy.errors.count, t(:erros_prohibited)) %></h3>
      </div>
      <div class="panel-description">
        <ul>
        <% @taxonomy.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-lg-3">
      <%= f.label :code, :class => 'col-lg' %>
      <%= f.text_field :code, :class => 'form-control' %>
    </div>
    <div class='col-lg-2'>  
      <%= f.label "taxonomy[kind]", 'Tipo', :class => 'col-lg' %>
      <%= f.select_tag "taxonomy[kind]", options_for_select(@TAXONOMY_TYPES), {:class => "form-control"} %>   
    </div>    
  </div>
  <div class="form-group">
    <div class="col-lg-12">
      <%= f.label :correlations, 'Sinonimos', :class => 'col-lg' %>
      <%= f.text_field :correlations, :class => 'form-control' %>
    </div>  
    <div class="col-lg-12">
      <%= f.label :description, :class => 'control-label' %>
      <%= f.text_area :description, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-10">
      <%= f.submit "Salvar", :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")), taxonomies_path, :class => 'btn btn-default' %>                
    </div>
  </div>

<% end %>