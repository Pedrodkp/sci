<%- model_class = Taxonomy -%>
<div class="page-header">
  <h1><%= @taxonomy.code %></h1>
</div>

<dl>
  <dd><%= @taxonomy.description %></dd>
  <dd><strong>Tipo: </strong><%= @taxonomy.kind %></dd>
  <dd><strong>Sinonimos: </strong><%= @taxonomy.correlations %></dd>
  <dd><strong><%= model_class.human_attribute_name(:created_at) %>: </strong><%=l @taxonomy.created_at %></dd>
  <dd><strong><%= model_class.human_attribute_name(:user) %>:</strong>
  <% if @taxonomy.user != nil %>
    <%= @taxonomy.user.name %>
  <% else %>
    <%= @taxonomy.relationships.first.article.user.name %>
     no artigo id: 
    <%= @taxonomy.relationships.first.article.id %>
  <% end %>
  </dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              taxonomies_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_taxonomy_path(@taxonomy), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              taxonomy_path(@taxonomy),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
