<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form'}) do |f| %>
    <h3>Esqueceu a senha?</h3>
    <p>Vamos enviar um e-mail com as instruções para gerar uma nova.</p>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label :email, 'E-Mail' %>
      <%= link_to "Faltou confirmar?", new_user_confirmation_path(resource_name), class: 'right' %>
      <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
    </div>     
     <%= f.submit 'Resetar Senha', :class => 'button right' %>
  <% end %>
</div>